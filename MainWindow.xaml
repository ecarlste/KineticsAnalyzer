<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Toolkit="clr-namespace:Microsoft.Kinect.Toolkit;assembly=Microsoft.Kinect.Toolkit" x:Class="KineticsAnalyzer.MainWindow"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Center">
            <Image x:Name="DepthImage" Width="640" Height="469"/>
        </Viewbox>
        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock x:Name="statusBarText" />
            </StatusBarItem>
        </StatusBar>
        <Toolkit:KinectSensorChooserUI x:Name="SensorChooserUI" IsListening="True" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom" Height="44" Width="55"/>
       

    </Grid>

</Window>
