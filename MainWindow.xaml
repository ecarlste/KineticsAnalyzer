<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Toolkit="clr-namespace:Microsoft.Kinect.Toolkit;assembly=Microsoft.Kinect.Toolkit"
        xmlns:kt="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers"
        x:Class="KineticsAnalyzer.MainWindow" Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded"
        Closed="WindowClosed" Closing="WindowClosing">
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Center">
            <kt:KinectDepthViewer x:Name="DepthViewer" CollectFrameRate="True" RetainImageOnSensorChange="True" KinectSensorManager="{Binding}" />
        </Viewbox>
        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" MouseLeftButtonUp="beginButton_MouseLeftButtonUp">
            <TextBlock HorizontalAlignment="Center">Begin Test</TextBlock>
        </Button>
        <Toolkit:KinectSensorChooserUI Grid.Row="1" x:Name="SensorChooserUI" IsListening="True"
                                       HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom"
                                       Height="44" Width="55"/>
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="statusBarText" />
            </StatusBarItem>
        </StatusBar>
       

    </Grid>

</Window>
